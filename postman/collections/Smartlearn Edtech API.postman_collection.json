		"name": "Smartlearn Edtech API",
		"description": "API collection for Smartlearn Edtech platform. Includes authentication, user management, and course management endpoints.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"description": "Authentication endpoints for login and registration",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"login"
							]
						},
						"description": "Authenticate user and receive API token"
					},
					"response": []
				},
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"register"
							]
						},
						"description": "Register a new user account"
					},
					"response": []
				}
			]
		},
		{
			"name": "Users",
			"description": "User management endpoints (requires authentication)",
			"item": [
				{
					"name": "List Users",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users"
							]
						},
						"description": "Get list of all users. Requires 'user.view' permission."
					},
					"response": []
				},
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"New User\",\n    \"email\": \"newuser@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users"
							]
						},
						"description": "Create a new user. Requires 'user.create' permission."
					},
					"response": []
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Updated Name\",\n    \"email\": \"updated@example.com\",\n    \"status\": \"1\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/:user_id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users",
								":user_id"
							],
							"variable": [
								{
									"key": "user_id",
									"value": "1",
									"description": "User ID"
								}
							]
						},
						"description": "Update an existing user. Requires 'user.update' permission."
					},
					"response": []
				},
				{
					"name": "Update Self",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"My Updated Name\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/:user_id/self",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users",
								":user_id",
								"self"
							],
							"variable": [
								{
									"key": "user_id",
									"value": "1",
									"description": "User ID (must be your own ID)"
								}
							]
						},
						"description": "Update your own user profile. Requires 'user.update.self' permission."
					},
					"response": []
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/:user_id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users",
								":user_id"
							],
							"variable": [
								{
									"key": "user_id",
									"value": "1",
									"description": "User ID"
								}
							]
						},
						"description": "Delete a user. Requires 'user.delete' permission. Cannot delete your own account."
					},
					"response": []
				},
				{
					"name": "Update User Status",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"status\": \"ACTIVE\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/:user_id/status",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users",
								":user_id",
								"status"
							],
							"variable": [
								{
									"key": "user_id",
									"value": "1",
									"description": "User ID"
								}
							]
						},
						"description": "Update user status. Requires 'user.update.status' permission. Valid statuses: ACTIVE, INACTIVE, BLOCKED"
					},
					"response": []
				}
			]
		},
		{
			"name": "Courses",
			"description": "Course management endpoints",
			"item": [
				{
					"name": "List Courses",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/courses?per_page=10",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"courses"
							],
							"query": [
								{
									"key": "per_page",
									"value": "10",
									"description": "Number of items per page (max 100)"
								}
							]
						},
						"description": "Get paginated list of courses. Public endpoint - no authentication required."
					},
					"response": []
				},
				{
					"name": "Create Course",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Introduction to Programming\",\n    \"description\": \"Learn the basics of programming\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/courses",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"courses"
							]
						},
						"description": "Create a new course. Requires 'course.create' permission."
					},
					"response": []
				},
				{
					"name": "Update Course",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated Course Title\",\n    \"description\": \"Updated course description\",\n    \"status\": \"PUBLISHED\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/courses/:course_id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"courses",
								":course_id"
							],
							"variable": [
								{
									"key": "course_id",
									"value": "1",
									"description": "Course ID"
								}
							]
						},
						"description": "Update an existing course. Requires 'course.update' permission. Valid statuses: DRAFT, PUBLISHED, ARCHIVED"
					},
					"response": []
				},
				{
					"name": "Delete Course",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/courses/:course_id",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"courses",
								":course_id"
							],
							"variable": [
								{
									"key": "course_id",
									"value": "1",
									"description": "Course ID"
								}
							]
						},
						"description": "Delete a course. Requires 'course.delete' permission."
					},
					"response": []
				}
			]
		}
